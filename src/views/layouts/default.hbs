{{!-- src/views/layouts/default.hbs --}}
{{! Base layout with header/footer }}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <style>
      body { font-family: system-ui, sans-serif; margin: 0; padding: 0; background: #f7f7fa; }
      header, footer { background: #222; color: #fff; padding: 1rem; text-align: center; }
      main { padding: 2rem 1rem; max-width: 700px; margin: 2rem auto; background: #fff; border-radius: 8px; box-shadow: 0 2px 8px #0001; }
    </style>
    {{
    #if
    theme}}
      <link rel="stylesheet" href="/public/themes/{{theme}}/css/{{theme}}_styles.css" />
    {{
    /if
    }}
  </head>
  <body>
    <header>
      <h1>KLOI Wizard</h1>
    </header>
    <main>
      {{{body}}}
    </main>
    <footer>
      &copy; {{year}} KLOI. All rights reserved.
    </footer>
  </body>
</html>
