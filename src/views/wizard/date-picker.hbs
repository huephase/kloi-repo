{{! src/views/wizard/date-picker.hbs }}
<div class="date-picker-container">
    <h2>When would you like to book for?</h2>
    
    <!-- Month Pills -->
    <div class="month-pills">
        <!-- Generated by JavaScript -->
    </div>
    
    <!-- Calendar Grid -->
    <div class="calendar-container">
        <div class="calendar-header">
            <div class="day-header">Sun</div>
            <div class="day-header">Mon</div>
            <div class="day-header">Tue</div>
            <div class="day-header">Wed</div>
            <div class="day-header">Thu</div>
            <div class="day-header">Fri</div>
            <div class="day-header">Sat</div>
        </div>
        <div class="calendar-grid">
            <!-- Generated by JavaScript -->
        </div>
    </div>
    
    <!-- Multi-day Event Toggle -->
    <div class="multi-day-section">
        <label class="multi-day-toggle">
            <input type="checkbox" id="multiDayToggle">
            <span class="toggle-text">Multi-day event</span>
        </label>
    </div>
    
    <!-- Date Selection Display -->
    <div class="selected-dates">
        <div class="date-display">
            <span class="date-label">Selected Date(s):</span>
            <span class="date-value" id="selectedDatesDisplay">None selected</span>
        </div>
    </div>
    
    <!-- Time Selection -->
    <div class="time-selection">
        <div class="time-group">
            <label for="startTime">Start Time:</label>
            <select id="startTime">
                <!-- Generated by JavaScript -->
            </select>
        </div>
        
        <div class="time-group">
            <label for="endTime">End Time:</label>
            <select id="endTime">
                <!-- Generated by JavaScript -->
            </select>
        </div>
    </div>
    
    <!-- Submit Section -->
    <div class="submit-section">
        <button type="button" id="submitButton" class="submit-btn">
            <span class="summary" id="bookingSummary">Please select date and time</span>
            <span class="confirm-text">Confirm</span>
        </button>
    </div>
</div>

<script src="/public/global/js/date__picker.js"></script>
<link rel="stylesheet" href="/public/global/css/date__picker.css">